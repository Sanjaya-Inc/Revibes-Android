            tools:node="merge">
            <meta-data
                android:name="com.carissa.revibes.core.di.KoinInitializer"
                android:value="androidx.startup" />
        </provider>
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.carissa.revibes.core.di.RemoteConfigInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>
</manifest>